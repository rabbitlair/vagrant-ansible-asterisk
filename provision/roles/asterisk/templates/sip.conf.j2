; {{ ansible_managed }}

[general]
realm={{ asterisk_realm }}
context=noauthenticated
allowguest=no

; Connection settings
tcpenable=yes
udpbindaddr={{ asterisk_ip }}:{{ asterisk_tcp_port }}
tcpbindaddr={{ asterisk_ip }}:{{ asterisk_udp_port }}

; TLS settings
tlsenable=yes
tlsbindaddr={{ asterisk_ip }}:{{ asterisk_tls_port }}
tlscertfile=/etc/asterisk/keys/asterisk.pem
tlsprivatekey=/etc/asterisk/keys/asterisk.key
tlscafile=/etc/asterisk/keys/ca.crt
tlscipher=ALL
tlsclientmethod=tlsv1
tlsdontverifyserver=yes

; Codec info
disallow = all
allow = gsm
allow = ilbc
allow = alaw
allow = ulaw
allow = g722
allow = g726aal2
allow = g726

; Misc info
language=en
session-expires=300
allowsubscribe=no
sendrpid=pai
trustrpid=no
alwaysauthreject=yes
useragent=pbx
nat=no
directmedia=nonat
sdpsession=pbx
avpf=yes

[phone](!)
type=friend
host=dynamic
directmedia=no
disallow=all
allow=gsm
dtmfmode=rfc2833
qualify=yes
qualifyfreq=50
transport={{ asterisk_transport }}
encryption={{ asterisk_encryption }}
encryption_taglen=32

{% for user in asterisk_users %}
[{{ user.id }}](phone)
callerid="{{ user.callerid }}"
secret={{ user.secret }}
context={{ user.context }}

{% endfor %}

